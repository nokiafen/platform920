<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/title_bar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/stringUtil"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="字符串相关" />

            <Button
                android:id="@+id/randomUtil"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="随机数" />

            <Button
                android:id="@+id/containerUtil"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="容器工具" />

            <Button
                android:id="@+id/dateUtil"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="日期转换" />

            <Button
                android:id="@+id/injectUtil"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="注解" />

            <Button
                android:id="@+id/sensorUtil"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="传感器" />

            <Button
                android:id="@+id/hardwareUtil"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="硬件操作" />

            <Button
                android:id="@+id/logUtil"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="日志打印" />


            <Button
                android:id="@+id/sharepreferenceUtil"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="sharepreference" />

            <Button
                android:id="@+id/ResourceUtils"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ResourceUtils"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/ShellUtils"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ShellUtils"
                android:textAllCaps="false" />
            <Button
                android:id="@+id/ToastUtil"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ToastUtil"
                android:textAllCaps="false" />
            <Button
                android:id="@+id/buglyCrash"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="buglyCrash"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/TimerUtils"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TimerUtils"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/push"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="push"
                android:textAllCaps="false" />
        </LinearLayout>

    </ScrollView>

</LinearLayout>